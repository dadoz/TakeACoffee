    <LinearLayout
            android:id="@+id/reviewsMachineMapContainerId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/addReviewSwipeButtonId">
        <ImageView
                android:id="@+id/reviewsMachineMapButtonId"
                android:layout_width="@dimen/medium_icon_size"
                android:layout_height="@dimen/medium_icon_size"
                android:padding="@dimen/small_padding_5"
                android:src="@drawable/position_icon"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/addReviewSwipeButtonId"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/medium_icon_size"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/border_left_light_grey"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/small_padding">
        <ImageView
                android:layout_width="@dimen/small_icon_size"
                android:layout_height="@dimen/small_icon_size"
                android:src="@drawable/left_arrow" />
    </LinearLayout>

</RelativeLayout>
