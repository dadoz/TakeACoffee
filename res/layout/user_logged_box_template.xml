<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10.0dip" >
        <ImageView
                android:id="@+id/loggedUserImageViewId"
                android:layout_width="40.0dip"
                android:layout_height="40.0dip"
                android:src="@drawable/user_icon_white_transparent"
                android:layout_alignParentLeft="true" />
        <TextView
                android:id="@+id/loggedUserTextId"
                android:textSize="@dimen/header_text_size"
                android:textColor="@color/light_grey"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="60.0dip"
                android:layout_marginRight="20.0dip"
                android:text=" - " />
        <Button
                android:id="@+id/loggedUserButtonId"
                android:textSize="@dimen/header_button_text"
                android:textColor="@color/light_black"
                android:background="@drawable/button_rounded_shape"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:layout_width="wrap_content"
                android:layout_height="40.0dip"
                android:text="change"
                android:layout_alignParentRight="true" />
</RelativeLayout>
