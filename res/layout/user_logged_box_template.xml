<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bottom"
        android:paddingBottom="@dimen/small_padding"
        android:paddingTop="@dimen/small_padding" >
        <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/loggedUserButtonId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center_vertical">
            <ImageView
                android:id="@+id/loggedUserImageViewId"
                android:layout_width="@dimen/small_icon_size"
                android:layout_height="@dimen/small_icon_size"
                android:src="@drawable/user_icon"
                 />
            <TextView
                android:id="@+id/loggedUserTextId"
                android:textSize="@dimen/header_text_size"
                android:textColor="@color/light_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dip"
                android:layout_marginLeft="@dimen/small_padding"
                android:text=" - " />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left_arrow"
                android:layout_marginLeft="@dimen/small_padding"
                android:layout_toRightOf="@+id/loggedUserTextId"/>

        <!--        <Button
                        android:id="@+id/loggedUserButtonId"
                        android:textSize="@dimen/header_button_text"
                        android:textColor="@color/light_black"
                        android:background="@drawable/button_rounded_shape"
                        android:paddingLeft="10.0dip"
                        android:paddingRight="10.0dip"
                        android:layout_width="wrap_content"
                        android:layout_height="40.0dip"
                        android:text="change"
                        android:layout_alignParentRight="true" />-->

    </LinearLayout>

    <LinearLayout
            android:id="@+id/headerMapLayoutId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true">
        <ImageView
                android:layout_width="@dimen/small_icon_size"
                android:layout_height="@dimen/small_icon_size"
                android:src="@drawable/position_icon"/>
        <TextView
                android:layout_width="@dimen/huge_icon_size"
                android:layout_height="wrap_content"
                android:text="Politecnico di Torino"
                android:textSize="@dimen/text_small"
                android:textColor="@color/light_black"/>

    </LinearLayout>
    <LinearLayout
            android:id="@+id/headerTabReviewLayoutId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true">
        <ImageView
                android:layout_width="@dimen/small_icon_size"
                android:layout_height="@dimen/small_icon_size"
                android:src="@drawable/coffe_cup_icon"/>
        <ImageView
                android:layout_width="@dimen/small_icon_size"
                android:layout_height="@dimen/small_icon_size"
                android:src="@drawable/coffe_cup_icon"/>
        <ImageView
                android:layout_width="@dimen/small_icon_size"
                android:layout_height="@dimen/small_icon_size"
                android:src="@drawable/coffe_cup_icon"/>

    </LinearLayout>

</RelativeLayout>
