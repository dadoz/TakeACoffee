<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/light_grey"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/loggedUsernameLayoutId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dip"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="10dip"
        android:paddingBottom="10dip"
        android:background="@android:color/white"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/userIconId"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:contentDescription="icon"
      		android:layout_alignParentLeft="true"
            android:src="@drawable/user_icon_grey" />

        <TextView
            android:id="@+id/registeredUsernameTextViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_centerVertical="true"
            android:text="username fake"
            android:textColor="@color/stone_grey"
            android:layout_toRightOf="@id/userIconId"
            android:textSize="20dip" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:contentDescription="icon"
      		android:layout_alignParentRight="true"
            android:src="@drawable/left_arrow_grey" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/review_shape"
        android:orientation="horizontal" >

        <LinearLayout
                android:id="@+id/awfulLayoutId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dip"
                android:padding="10dip"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                        android:layout_width="@dimen/button_height"
                        android:layout_height="@dimen/button_height"
                        android:background="@drawable/terrible_icon"
                        android:textColor="@color/light_grey" />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"
                        android:text="awful"
                        android:textColor="@color/dark_grey" />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/notBadLayoutId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dip"
                android:padding="10dip"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                        android:layout_width="@dimen/button_height"
                        android:layout_height="@dimen/button_height"
                        android:background="@drawable/not_bad_icon"
                        android:textColor="@color/light_grey" />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center_vertical"
                        android:text="not so bad"
                        android:textColor="@color/dark_grey" />

        </LinearLayout>
        <LinearLayout
                android:id="@+id/goodLayoutId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="1dip"
                android:padding="10dip"
                android:gravity="center"
                android:layout_weight="1">

                <ImageView
                        android:layout_width="@dimen/button_height"
                        android:layout_height="@dimen/button_height"
                        android:background="@drawable/good_icon"
                        android:textColor="@color/white" />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textColor="@color/dark_grey"
                        android:text="good" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/white"
        android:padding="10dip">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/reviewMessageEditTextId"
                android:ems="10"
                android:textColor="@color/dark_grey"
                android:hint="insert your review"
                android:lines="2"
                android:padding="10dip">
            <requestFocus android:layout_width="match_parent" />
        </EditText>

    </LinearLayout>

    <Button
        android:id="@+id/postButtonId"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@color/coffe_dark"
        android:text="post"
        android:textColor="@color/coffe_ligth" />

</LinearLayout>