<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="fill_parent"
    android:layout_height="120dp"
    android:background="@color/middle_grey"
    android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/modifyReviewEditLayoutId"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_marginLeft="@dimen/medium_padding"
            android:orientation="vertical" >
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_edit"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/header_button_text"
                    android:text="edit"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/modifyReviewDeleteLayoutId"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/medium_padding"
                android:gravity="center"
                android:orientation="vertical" >
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_delete"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/header_button_text"
                    android:text="delete"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/modifyReviewChangeTypeLayoutId"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="@dimen/medium_padding"
                android:gravity="center"
                android:orientation="vertical" >
                <ImageView
                    android:id="@+id/changeTypeIconImageViewId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_btn_speak_now"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/header_button_text"
                    android:text="change type"/>
        </LinearLayout>

    <ImageView
            android:id="@+id/modifyReviewBackImageViewId"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="50dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"/>

</LinearLayout>