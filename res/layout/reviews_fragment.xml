<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <include layout="@layout/review_header_template" />
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/middle_grey"
                    android:paddingBottom="40dip"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/title_text_size"
                        android:text="Today"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/text_small"
                        android:textColor="@color/dark_grey"
                        android:text="Read today's review for this machine"/>
                <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dip">
                    <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                        <LinearLayout
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">
                            <ImageView
                                    android:id="@+id/goodReviewButtonId"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/good_circle_icon_five_more"
                                    />
                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@color/light_black"
                                    android:layout_marginTop="@dimen/small_padding"
                                    android:textSize="@dimen/text_medium_20"
                                    android:text="Good!"/>
                        </LinearLayout>
                        <LinearLayout
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">
                            <ImageView
                                    android:id="@+id/badReviewButtonId"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/bad_circle_icon_zero"
                                    />
                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@color/light_black"
                                    android:layout_marginTop="@dimen/small_padding"
                                    android:textSize="@dimen/text_medium_20"
                                    android:text="Not so bad!"/>
                        </LinearLayout>
                        <LinearLayout
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">
                            <ImageView
                                    android:id="@+id/worstReviewButtonId"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/worst_circle_icon_ten_more"
                                    />
                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textColor="@color/light_black"
                                    android:layout_marginTop="@dimen/small_padding"
                                    android:textSize="@dimen/text_medium_20"
                                    android:text="Worst!"/>
                        </LinearLayout>
                    </TableRow>
                </TableLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="40dip"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/title_text_size"
                        android:text="Previous days"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/text_small"
                        android:textColor="@color/dark_grey"
                        android:text="Load more reviews for this machine"/>
                    <ImageView
                        android:id="@+id/prevReviewsButtonId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dip"
                        android:layout_gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>