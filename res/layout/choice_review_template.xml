<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
            android:id="@+id/choiceReviewLatestReviewBottomBoxId"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:background="@color/middle_grey"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/small_padding"
            android:paddingRight="@dimen/small_padding"
            android:paddingBottom="@dimen/small_padding">

        <TextView
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_text_size"
                android:text="LATEST WEEKS"/>

        <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/choiceReviewLatestReviewBottomCounterId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/header_text_size"
                    android:text="NO REVIEWS"
                    />
            <ImageView
                    android:id="@+id/choiceReviewLeftArrowId"
                    android:layout_width="@dimen/small_icon_size"
                    android:layout_height="@dimen/small_icon_size"
                    android:src="@drawable/left_arrow"/>
        </LinearLayout>
    </RelativeLayout>

        <RelativeLayout
                android:id="@+id/choiceReviewHeaderTodayId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/small_padding"
                android:paddingRight="@dimen/small_padding"
                android:paddingBottom="@dimen/small_padding">

            <TextView
                    android:id="@+id/choiceReviewHeaderTitleTextId"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/title_text_size"
                    android:text="TODAY"/>
            <LinearLayout
                    android:id="@+id/choiceReviewLatestContainerId"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_small_16"
                        android:text="latest at:"
                        />
                <TextView
                        android:id="@+id/choiceReviewLatestTimestampTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_big_30"
                        android:textColor="@color/white"
                        android:paddingLeft="@dimen/small_padding"
                        android:text=" - "
                        />
            </LinearLayout>
            <LinearLayout
                    android:id="@+id/choiceReviewLatestContainerNotSetId"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_big_30"
                        android:textColor="@color/light_black"
                        android:paddingLeft="@dimen/small_padding"
                        android:text="NO REVIEW"
                        />
            </LinearLayout>

        </RelativeLayout>


    <RelativeLayout
            android:id="@+id/choiceReviewHeaderPreviousId"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/light_green"
            android:paddingLeft="@dimen/small_padding"
            android:paddingRight="@dimen/small_padding"
            android:paddingBottom="@dimen/small_padding">
        <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_small_16"
                    android:text="latest at:"
                    />
            <TextView
                    android:id="@+id/choiceReviewLatestPreviousTimestampTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_big_30"
                    android:textColor="@color/white"
                    android:paddingLeft="@dimen/small_padding"
                    android:text=" - "
                    />
        </LinearLayout>

        <TextView
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_text_size"
                android:text="LATEST WEEKS"/>

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/choiceReviewMainContentId"
            android:layout_width="fill_parent"
            android:layout_height="210dip"
            android:background="@color/light_green"
            android:orientation="horizontal">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <!--<LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/badReviewButtonId"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/extra_huge_icon_size"
                        android:src="@drawable/coffe_cup_icon_empty"
                        />
                </LinearLayout>-->
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/choiceReviewButtonId"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/extra_huge_icon_size"
                        android:layout_marginBottom="@dimen/medium_padding"
                        android:src="@drawable/coffe_cup_icon"
                        />
                </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:gravity="bottom"
                android:layout_height="match_parent">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_medium_20"
                        android:text="# of review"
                        />
                <TextView
                        android:id="@+id/choiceReviewCounterTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/light_grey"
                        android:textSize="@dimen/huge_icon_size"
                        android:text="x"
                        />
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="last review at "
                        />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_big_30"
                        android:textColor="@color/light_grey"
                        android:text="13:54"
                        />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
            android:id="@+id/footerChoiceReviewLayoutId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:id="@+id/footerChoiceReviewAddReviewButtonId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_padding"
                android:paddingTop="@dimen/small_padding"
                android:paddingBottom="@dimen/small_padding"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true">
            <ImageView
                    android:layout_width="@dimen/small_icon_size"
                    android:layout_height="@dimen/small_icon_size"
                    android:layout_gravity="center"
                    android:src="@drawable/add_icon"/>
            <TextView
                    android:id="@+id/footerChoiceReviewTextId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_big_24"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/small_padding"
                    android:text="review status"/>

        </LinearLayout>

<!--        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small"
                android:text="Add text"/>-->
        <LinearLayout
                android:id="@+id/reviewsMachineSwipeButtonId"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/medium_button_size"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/small_padding"
                android:paddingRight="@dimen/small_padding">
            <ImageView
                    android:layout_width="@dimen/small_icon_size"
                    android:layout_height="@dimen/small_icon_size"
                    android:src="@drawable/left_arrow" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>