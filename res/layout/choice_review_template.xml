    <!--main content-->
    <LinearLayout
            android:id="@+id/choiceReviewPageContainerId"
            android:layout_below="@+id/choiceReviewLatestReviewBottomBoxId"
            android:layout_marginBottom="@dimen/medium_button_size"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/middle_grey"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/choiceReviewHeaderTodayId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/small_padding"
                android:paddingRight="@dimen/small_padding"
                android:paddingBottom="@dimen/small_padding">
                <TextView
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/title_text_size"
                        android:text="TODAY"/>
                <LinearLayout
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_small_16"
                            android:text="latest at:"
                            />
                    <TextView
                            android:id="@+id/choiceReviewLatestTimestampTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_big_30"
                            android:textColor="@color/white"
                            android:paddingLeft="@dimen/small_padding"
                            android:text=" - "
                            />
                </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/choiceReviewMainContentId"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom">
                <ImageView
                        android:id="@+id/choiceReviewButtonId"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/extra_huge_icon_size"
                        android:layout_marginBottom="@dimen/medium_padding"
                        android:src="@drawable/coffe_cup_icon"
                        />
            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:gravity="bottom"
                    android:layout_height="match_parent">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_medium_20"
                        android:text="# of review"
                        />
                <TextView
                        android:id="@+id/choiceReviewCounterTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/light_grey"
                        android:textSize="@dimen/huge_icon_size"
                        android:text="0"
                        />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!--bottom bar-->
    <RelativeLayout
            android:id="@+id/footerChoiceReviewLayoutId"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/medium_button_size">
        <LinearLayout
                android:id="@+id/footerChoiceReviewAddReviewButtonId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small_padding"
                android:paddingTop="@dimen/small_padding"
                android:paddingBottom="@dimen/small_padding"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true">
            <ImageView
                    android:layout_width="@dimen/small_icon_size"
                    android:layout_height="@dimen/small_icon_size"
                    android:layout_gravity="center"
                    android:src="@drawable/add_icon"/>
            <TextView
                    android:id="@+id/footerChoiceReviewTextId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_big_24"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/small_padding"
                    android:text="review status"/>

        </LinearLayout>
        <LinearLayout
                android:id="@+id/reviewsMachineSwipeButtonId"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/medium_button_size"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:paddingLeft="@dimen/small_padding"
                android:paddingRight="@dimen/small_padding">
            <ImageView
                    android:layout_width="@dimen/small_icon_size"
                    android:layout_height="@dimen/small_icon_size"
                    android:src="@drawable/left_arrow" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>