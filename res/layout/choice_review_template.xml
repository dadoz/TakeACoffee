<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
                android:id="@+id/choiceReviewHeaderTitleTextId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingBottom="@dimen/small_padding"
                android:textSize="@dimen/title_text_size"
                android:text=" - to be set - "/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <!--<LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/badReviewButtonId"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/extra_huge_icon_size"
                        android:src="@drawable/coffe_cup_icon_empty"
                        />
                </LinearLayout>-->
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/choiceReviewButtonId"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/extra_huge_icon_size"
                        android:src="@drawable/coffe_cup_icon"
                        />
                </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:gravity="bottom"
                android:layout_height="match_parent">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_medium_20"
                        android:text="# of review"
                        />
                <TextView
                        android:id="@+id/choiceReviewCounterTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/light_grey"
                        android:textSize="@dimen/huge_icon_size"
                        android:text="x"
                        />
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="last review at "
                        />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_big_30"
                        android:textColor="@color/light_grey"
                        android:text="13:54"
                        />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
            android:id="@+id/footerChoiceReviewLayoutId"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_yellow_lemon_soft"
            android:padding="@dimen/small_padding">
        <TextView
                android:id="@+id/footerChoiceReviewTextId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_big_24"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/small_padding"
                android:text="review status"/>
<!--        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_small"
                android:text="Add text"/>-->
        <LinearLayout
                android:id="@+id/footerChoiceReviewAddReviewButtonId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true">
            <ImageView
                    android:layout_width="@dimen/small_icon_size"
                    android:layout_height="@dimen/small_icon_size"
                    android:layout_gravity="center"
                    android:src="@drawable/add_icon"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>