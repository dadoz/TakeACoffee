<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
    <LinearLayout
            android:id="@+id/coffeeMachineFragmentLayoutId"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/small_padding"
            android:orientation="vertical">
        <TextView
                android:layout_width="280dip"
                android:layout_height="wrap_content"
                android:textSize="@dimen/title_text_size"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/light_black"
                android:text="Take a coffee!"/>
        <TextView
                android:layout_width="320dip"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_medium_20"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/dark_grey"
                android:text="tap on one coffee machine icon to READ or ADD some review!" />
        <TableLayout
                android:id="@+id/coffeeMachineTableLayoutId"
                android:layout_marginTop="@dimen/small_padding"
                android:background="@color/light_red"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        <!--SETTING LAYOUT-->
        <LinearLayout
                android:id="@+id/settingsLayoutId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/light_black"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="@dimen/small_padding">
            <ImageView
                    android:layout_width="@dimen/huge_icon_size"
                    android:layout_height="@dimen/huge_icon_size"
                    android:src="@drawable/settings_icon"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_big_26"
                    android:textColor="@color/light_grey"
                    android:layout_marginLeft="@dimen/small_padding"
                    android:text="Settings"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>