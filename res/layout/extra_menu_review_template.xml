<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/extraMenuItemViewId"
    android:layout_width="fill_parent"
    android:layout_height="120dp"
    android:background="@color/light_green"
    android:orientation="horizontal" >

    <LinearLayout
            android:id="@+id/modifyReviewBackImageViewId"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:padding="@dimen/small_padding"
            android:layout_alignParentLeft="true">
        <ImageView
                android:layout_gravity="center"
                android:layout_width="@dimen/small_icon_size"
                android:layout_height="@dimen/small_icon_size"
                android:src="@drawable/undo_icon"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/modifyReviewEditLayoutId"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@+id/modifyReviewDeleteLayoutId"
        android:paddingLeft="@dimen/small_padding"
        android:paddingRight="@dimen/small_padding"
        android:gravity="center"
        android:orientation="vertical" >
        <ImageView
                android:layout_width="@dimen/small_icon_size"
                android:layout_height="@dimen/small_icon_size"
                android:src="@drawable/edit_icon"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/header_button_text"
                android:text="edit"/>
    </LinearLayout>

    <LinearLayout
            android:id="@+id/modifyReviewDeleteLayoutId"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/small_padding"
            android:paddingRight="@dimen/small_padding"
            android:layout_marginLeft="@dimen/small_padding"
            android:layout_marginRight="@dimen/small_padding"
            android:gravity="center"
            android:orientation="vertical" >
        <ImageView
                android:layout_width="@dimen/small_icon_size"
                android:layout_height="@dimen/small_icon_size"
                android:src="@drawable/delete_icon"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/header_button_text"
                android:text="delete"/>
    </LinearLayout>
