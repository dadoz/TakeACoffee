<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/medium_padding"

            android:paddingBottom="@dimen/medium_padding">
        <LinearLayout
                android:id="@+id/choiceGoodReviewLayoutId"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:padding="@dimen/small_padding"
                android:background="@color/middle_grey"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/good_circle_icon"/>
            <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/small_padding"
                    android:textSize="@dimen/header_button_text"
                    android:text="select GOOD review"/>

        </LinearLayout>
        <LinearLayout
                android:id="@+id/choiceNotBadReviewLayoutId"
                android:orientation="horizontal"
                android:padding="@dimen/small_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/bad_circle_icon"/>
            <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/small_padding"
                    android:textSize="@dimen/header_button_text"
                    android:text="select NOT SO BAD review"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/choiceWorstReviewLayoutId"
                android:orientation="horizontal"
                android:padding="@dimen/small_padding"
                android:background="@color/middle_grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/worst_circle_icon"/>
            <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/small_padding"
                    android:textSize="@dimen/header_button_text"
                    android:text="select TERRIBLE review"/>
        </LinearLayout>

</LinearLayout>