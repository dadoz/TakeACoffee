<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/reviewsButtonId"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dip"
    android:layout_marginTop="0dip"
    android:background="@drawable/review_shape"
    android:orientation="vertical"
>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tag_height"
        android:orientation="horizontal" 
        android:padding="10dp" >

        <ImageView
            android:id="@+id/coffeeIconId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/coffee_cup" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_toRightOf="@id/coffeeIconId"
            android:layout_marginLeft="10dp"
			android:orientation="vertical" >

            <TextView
                android:id="@+id/coffeMachineNameTextId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/coffe_dark"
                android:textSize="20sp"
                android:text="coffe machine name" />

            <TextView
                android:id="@+id/coffeMachineAddressTextId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
    			android:textColor="@color/coffe_ligth"
                android:text="coffe machine address" />
        </LinearLayout>
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            
            android:layout_marginRight="10dip"
			android:layout_alignParentRight="true"            
			android:layout_centerVertical="true"
            android:src="@drawable/left_arrow" />
        
    </RelativeLayout>
