<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reviewsButtonId"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <ImageView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/coffeeIconId"
            android:layout_width="120dip"
            android:layout_height="130dip"
            android:src="@drawable/coffe_cup_black_white" />
    <TextView
            android:id="@+id/coffeeMachineNameTextId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" SAMPLE TEXT "
            android:textSize="@dimen/header_text_size" />
    <TextView
            android:id="@+id/coffeeMachineLastUpdateTextId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" last update "
            android:textColor="@color/light_grey"
            android:textSize="@dimen/text_small_14" />
</LinearLayout>

