<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <ImageView
            android:id="@+id/profilePicImageViewId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/user_icon_white" />
    <TextView
            android:textSize="@dimen/text_small"
            android:textColor="@color/dark_grey"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="tap to change your profile pic"/>
    <EditText
            android:id="@+id/usernameNewUserEditTextId"
            android:textSize="@dimen/header_text_size"
            android:textColor="@color/light_black"
            android:layout_height="wrap_content"
            android:layout_width="200dip"
            android:hint="username" />
    <Button
            android:id="@+id/saveButtonId"
            android:textSize="@dimen/header_button_text"
            android:textColor="@color/light_grey"
            android:background="@drawable/button_rounded_shape_black"
            android:layout_marginTop="10dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:layout_width="wrap_content"
            android:layout_height="40.0dip"
            android:text="save" />

</LinearLayout>