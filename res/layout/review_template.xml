<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <LinearLayout
            android:id="@+id/mainItemViewId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/middle_grey_lighter"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/small_padding"
                        android:gravity="center"
                        android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/profilePicReviewTemplateId"
                        android:layout_width="@dimen/large_icon_size"
                        android:layout_height="@dimen/large_icon_size"
                        android:src="@drawable/user_icon" />
                    <TextView
                            android:id="@+id/reviewUsernameTextId"
                            android:layout_width="140dip"
                            android:layout_height="wrap_content"
                            android:text="reviewer username"
                            android:textColor="@color/light_red"
                            android:gravity="center"
                            android:textSize="@dimen/header_text_size" />
                </LinearLayout>
                <TextView
                        android:id="@+id/reviewCommentTextId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/small_padding"
                        android:text="review content"
                        android:textColor="@color/light_black"
                        android:textSize="@dimen/text_big_22" />

            </LinearLayout>
            <TextView
                android:id="@+id/reviewDateTextId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_small"
                android:layout_marginRight="@dimen/small_padding"
                android:layout_gravity="right"
                android:text=" 06.11.1990 " />
    </LinearLayout>
    <include layout="@layout/extra_menu_review_template" />
</LinearLayout>